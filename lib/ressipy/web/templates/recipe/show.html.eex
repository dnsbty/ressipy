<h2>Show Recipe</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @recipe.name %>
  </li>

  <li>
    <strong>Author:</strong>
    <%= @recipe.author %>
  </li>

  <li>
    <strong>Default image:</strong>
    <%= @recipe.default_image %>
  </li>

</ul>

<span><%= link "Edit", to: recipe_path(@conn, :edit, @recipe) %></span>
<span><%= link "Back", to: recipe_path(@conn, :index) %></span>
